{
  "name": "fav.sh",
  "version": "2.0.1",
  "description": "Fav Bookmark Manager",
  "main": "index.js",
  "scripts": {
    "firefox": "run-p bundle:firefox start:firefox",
    "chrome": "run-p bundle:chrome start:chrome",
    "bundle:chrome": "TARGET=chrome NODE_ENV=development parcel ./src/manifest.json ./src/entry/settings.html",
    "bundle:firefox": "TARGET=browser NODE_ENV=development parcel ./src/manifest.json ./src/entry/settings.html",
    "start:firefox": "web-ext run -t firefox-desktop --source-dir ./dist",
    "start:chrome": "web-ext run -t chromium --source-dir ./dist",
    "build:firefox": "yarn clean && NODE_ENV=production TARGET=firefox parcel build ./src/manifest.json ./src/entry/settings.html --no-source-maps && web-ext build --source-dir ./dist",
    "build:chrome": "yarn clean && NODE_ENV=production TARGET=chrome parcel build ./src/manifest.json ./src/entry/settings.html --no-source-maps",
    "format": "prettier --write './src/js/**/*.{ts,tsx}'",
    "clean": "rm -rf ./dist ./.cache ./web-ext-artifacts",
    "ci": "tsc && yarn run format",
    "report": "yarn clean && NODE_ENV=production TARGET=firefox parcel build ./src/manifest.json ./src/entry/settings.html --no-source-maps && firefox ./dist/report.html"
  },
  "author": "Sunny Golovine",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.9.8",
    "axios": "^0.19.2",
    "file-saver": "^2.0.2",
    "github-api": "^3.3.0",
    "lodash": "^4.17.15",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-sidebar": "^3.0.2",
    "redux": "^4.0.5",
    "redux-devtools": "^3.5.0",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.0.1",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@material-ui/types": "^5.0.0",
    "@types/axios": "^0.14.0",
    "@types/chrome": "^0.0.114",
    "@types/file-saver": "^2.0.1",
    "@types/firefox-webext-browser": "^70.0.1",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.9.27",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-sidebar": "^3.0.0",
    "@types/redux": "^3.6.0",
    "@types/redux-devtools": "^3.0.47",
    "@types/redux-devtools-dock-monitor": "^1.1.33",
    "@types/redux-devtools-log-monitor": "^1.0.34",
    "@types/styled-components": "^5.0.1",
    "@types/uuid": "^7.0.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "crx3": "^1.1.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-compress": "^2.0.0",
    "parcel-plugin-web-extension": "^1.6.1",
    "prettier": "^2.0.2",
    "typescript": "^3.8.3",
    "web-ext": "^4.1.0"
  }
}
